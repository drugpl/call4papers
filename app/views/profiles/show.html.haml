%h1 My profile
.profile
  %table.table
    %tr
      %th Avatar
      %th Name
      %th Email
      %th GitHub
      %th Twitter
    %tr
      %td
        = image_tag(avatar_url(@user, 64))
      %td= @user.name
      %td= @user.email
      %td
        - if @user.connected_with_github?
          = github_link(@user.github_handle)
        - else
          %a.btn-auth.btn-github{href: "/auth/github"}
            connect
            %b GitHub
      %td
        - if @user.connected_with_twitter?
          = twitter_link(@user.twitter_handle)
        - else
          %a.btn-auth.btn-twitter{href: "/auth/twitter"}
            connect
            %b Twitter
.bio
  %h2 Bio
  - if @user.has_bio?
    = markdown(@user.bio)
  - else
    Tell us more about yourself!
= link_to "Edit profile and bio", edit_profile_path, class: 'btn btn-success'
